#!/bin/zsh

setopt err_exit # Прервать выполнение в случае ошибки
root=$(dirname $(readlink -f $0))/..

cp -r $root/fs/* /

# Переустановка stow-пакета
# =========================

cabal install
cd /usr/local/stow

# Удаление старого пакета
if [[ -d netm ]] {
  stow --delete netm
  rm -r netm
}

# Создание файлов stow-пакета
mkdir netm
cp -r $root/.cabal-sandbox/bin netm

# Установка пакета
stow netm
